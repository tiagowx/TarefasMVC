@using TarefasMVC.Models
@model TarefasMVC.Models.Tarefa
@{
  ViewData["Title"] = "Nova Tarefa";
}

<div class="row justify-content-center">

<h2 class="text-center text-primary">@ViewData["Title"]</h2>
  <div class="col-md-4">
     <form asp-action="Criar">
        <div class="form-group">
          <label asp-for="Titulo" class="control-label"></label>
          <input asp-for="Titulo" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="Descricao" class="control-label"></label>
          <input asp-for="Descricao" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="Data" class="control-label"></label>
          <input type="date" asp-for="Data" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="Status" class="control-label"></label>
            <select class="form-select" asp-for="Status" asp-items="@Html.GetEnumSelectList<EnumStatusTarefa>()">
            </select>    
        </div>
        <br />
        <div class="form-group">
          <input type="submit" class="btn btn-primary justify-self-end" value="Criar" />
        </div>
      </form>
  </div>
</div>
<br>
<div>
  <a asp-action="Index">Voltar</a>
</div>